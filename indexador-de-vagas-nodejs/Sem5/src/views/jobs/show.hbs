<section class="jobs-top">
	<div class="container">
		<div class="row justify-content-center">
			<h1>{{ data.title }}</h1>
		</div>
	</div>
</section>

<section class="job-detail">
	<div class="container">
		<div class="row">
			<div class="col">
				{{{ data.desc_full }}}
			</div>
			<div class="col-xs-12 col-sm-12 col-md-12">
				{{#if user}}
					<a href="{{ data.url }}" target="_blank" class="btn btn-info btn-lg">Ir ate vaga</a>
				{{else}}
					<button type="button" class="btn btn-info btn-lg" disabled>Crie uma conta</button>
				{{/if}}
				<a href="/jobs" class="btn btn-warning btn-lg">Voltar para listagem</a>
			</div>
		</div>
	</div>
</section>